{
  "name": "chirp-data",
  "version": "1.0.0",
  "description": "CHIRP Radio Content Management System",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "generate:types": "payload generate:types",
    "seed": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts tsx src/seed/import-data.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@payloadcms/db-sqlite": "^3.61.0",
    "@payloadcms/next": "^3.61.0",
    "@payloadcms/richtext-lexical": "^3.61.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "express": "^4.19.2",
    "graphql": "^16.11.0",
    "next": "^15.5.6",
    "payload": "^3.61.0",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/react": "^19.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
